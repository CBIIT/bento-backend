[Unit]
Description=Docker Container %I
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStartPre=-/usr/bin/docker rm -f %i 
ExecStart=/usr/bin/docker run --name %i \
--restart=on-failure:10 \
--publish 80:80 \
--log-driver: syslog \
--log-op syslog-address: tcp://{{ syslog_host }}:514 \
--log-op tag: "{{ app_name }}-frontend" \
--log-op syslog-format: "rfc5424micro" \
--env-file=/local/content/docker/frontend.env \
ncidockerhub.nci.nih.gov/icdc/icdc-frontend:{{build_number}}
ExecStop=/usr/bin/docker stop %i

[Install]
WantedBy=default.target