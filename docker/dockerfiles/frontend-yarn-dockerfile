FROM nginx:alpine

ENV DOCKERIZE_VERSION v0.6.1

RUN apk add --no-cache gettext
COPY nginx-entrypoint.sh /
COPY ./dist /usr/share/nginx/html

 
# Enable nginx stub_status
RUN sed -i -e :a -e '/^\n*$/{$d;N;ba' -e '}' /etc/nginx/conf.d/default.conf && sed -i '$ d' /etc/nginx/conf.d/default.conf && echo "location /nginx_status {stub_status;}}" >> /etc/nginx/conf.d/default.conf

ENTRYPOINT [ "sh", "/nginx-entrypoint.sh" ]