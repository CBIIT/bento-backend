ECS_DATADIR=/data
ECS_ENABLE_TASK_IAM_ROLE=true
ECS_ENABLE_TASK_IAM_ROLE_NETWORK_HOST=true
ECS_LOGFILE=/log/ecs-agent.log
ECS_AVAILABLE_LOGGING_DRIVERS=["json-file","awslogs"]
ECS_LOGLEVEL=info
ECS_CLUSTER={{ecs_cluster_name}}
{% if processor_instance == 'comets-processor' %}
ECS_INSTANCE_ATTRIBUTES={"role": "processor"}
{% endif %} 
{% if frontend_instance == 'comets-frontend' %}
ECS_INSTANCE_ATTRIBUTES={"role": "app"} 
{% endif %}
