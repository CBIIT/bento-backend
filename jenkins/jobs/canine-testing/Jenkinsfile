
import groovy.json.JsonOutput

def sendSlackMessage() {

  def table = JsonOutput.toJson(
     [[
          title: "Steps",
          Passed: env.STEP_PASSED,
          Failed: env.STEP_FAILED,
          Skipped: env.STEP_SKIPPED,
          Pending: env.STEP_PENDING,
          Undefined: env.STEP_UNDEFINED,
      ],
      [
          title: "Scenarios",
          Passed: env.S_PASSED,
          Failed: env.S_FAILED,
                    
      ],
      [
          title: "Features",
          Duration: env.F_DURATION,
          Status: env.F_STATUS,
                    
      ]]
  )

  jenkins_image = ":jenkins:"
  beer_image = ":beer:"
  long epoch = System.currentTimeMillis()/1000
  def BUILD_COLORS = ['SUCCESS': 'good', 'FAILURE': 'danger', 'UNSTABLE': 'danger', 'ABORTED': 'danger']
  
  def slack = JsonOutput.toJson(
      [
            icon_emoji: jenkins_image,
            attachments: [[
              title: "Jenkins Job Alert - ${currentBuild.currentResult}",
              text:  "Job ${env.JOB_NAME} build ${env.BUILD_NUMBER} ${beer_image}\n Analysis of Results: \n ```${table}``` \nDetails at: ${env.BUILD_URL}console",
              fallback: "ICDC Jenkins Build",
              color: "${BUILD_COLORS[currentBuild.currentResult]}",
              footer: "icdc QA testing",
              ts: epoch,
              mrkdwn_in: ["footer", "title"],
           ]]
        ]
    )
    try {
        sh "curl -X POST -H 'Content-type: application/json' --data '${slack}'  '${SLACK_URL}'"
    } catch (err) {
        echo "${err} Slack notify failed"
    }
}

pipeline {

  agent {
    node {
      label 'cicd-selenium'
    }
  }
  options {
    timestamps()
  }
  tools { 
    maven 'maven-3.6.1' 
    jdk 'jdk11' 
  }
  stages {
    stage('Checkout') {
      steps {
        git branch: 'master',
            url: 'https://github.com/CBIIT/icdc_uitest',
            credentialsId: 'vdonkor'
      }
    }
    stage('Build') {
      steps {
        wrap([$class: 'Xvfb']) {
          sh """
              mvn clean install
             """
           
          script {
            env.REPORT_FILE = readFile('target/site/cucumber-reports/cucumber-html-reports/overview-features.html')
          }
          sh '''
            lynx --dump  target/site/cucumber-reports/cucumber-html-reports/overview-features.html > slack-report.txt
            cat slack-report.txt
            export STEP_PASSED=`cat slack-report.txt | grep Footer | awk '{ print $3}'`
            export STEP_FAILED=`cat slack-report.txt | grep Footer | awk '{ print $4}'`
            export STEP_SKIPPED=`cat slack-report.txt | grep Footer | awk '{ print $5}'`
            export STEP_UNDEFINED=`cat slack-report.txt | grep Footer | awk '{ print $6}'`
            export STEP_PENDING=`cat slack-report.txt | grep Footer | awk '{ print $7}'`
            export S_PASSED=`cat slack-report.txt | grep Footer | awk '{ print $8}'`
            export S_FAILED=`cat slack-report.txt | grep Footer | awk '{ print $9}'`
            export F_DURATION=`cat slack-report.txt | grep Footer | awk '{ print $12 " "$13}'`
            export F_STATUS=`cat slack-report.txt | grep Footer | awk '{ print $14}'`
          '''
          sh """
              cd target/site/cucumber-reports
              zip -r cucumber-html-reports.zip cucumber-html-reports
            """
        }
      }
    }
    
  }
  post {
    always {
      cucumber failedFeaturesNumber: -1, failedScenariosNumber: -1, failedStepsNumber: -1, fileIncludePattern: '**/*.json', jsonReportDirectory: 'target', pendingStepsNumber: -1, skippedStepsNumber: -1, sortingMethod: 'ALPHABETICAL', undefinedStepsNumber: -1
      // emailext attachmentsPattern: 'target/site/cucumber-reports/cucumber-html-reports.zip', body: 'Test', subject: '$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS!', to: 'vincent.donkor@nih.gov'
      sendSlackMessage()
    }
  }
}
  
  